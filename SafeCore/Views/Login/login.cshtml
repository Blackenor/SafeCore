@{
	ViewBag.Tittle = "Log In";
	Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}


<div class="sidenav">
	<div class="login-main-text">
		<h2>SafeCore<br> Login Page</h2>
		<p>Login or register from here to access.</p>
	</div>
</div>
<div class="main">
	<div class="col-md-6 col-sm-12">
		<div class="login-form">
			<form>
				<div class="form-group">
					<label>User Name</label>
					<input text-center type="text" class="form-control" placeholder="User Name">
				</div>
				<div class="form-group">
					<label>Password</label>
					<input text-center type="password" class="form-control" placeholder="Password">
				</div>
				<button href="/Home" class="btn btn-black" asp-area="" asp-controller="Home" asp-action="Index">Login</button>
				<button type="submit" class="btn btn-secondary">Register</button>
			</form>
		</div>
	</div>
</div>